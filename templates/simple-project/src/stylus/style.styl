.wrap 
  text-align center

aside
  width 300px
  padding 20px
  display block
  margin 0 auto
  box-shadow 0px 0px 5px rgba(0,0,0,0.5)

img 
  size(250px)

h1
  margin 40px
  font-size rem(34px)
